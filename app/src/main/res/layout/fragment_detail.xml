<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".ui.DetailFragment">

    <TextView
        android:id="@+id/net_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:text="@string/net_name_label"
         />

    <TextView
        android:id="@+id/net_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/net_name_label"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="WAN"
        />

    <TextView
        android:id="@+id/ip_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/net_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="@string/ip_label"/>

    <TextView
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ip_label"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="192.168.1.1/24"/>

</androidx.constraintlayout.widget.ConstraintLayout>